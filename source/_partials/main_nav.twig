<header class="navbar navbar-inverse navbar-fixed-top wet-asphalt" role="banner">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ site.url }}/">
                <img src="{{ site.url }}/assets/images/logo.png" alt="logo" class="hidden-xs">
                <img src="{{ site.url }}/assets/images/logo-small.png" alt="logo" class="visible-xs">
            </a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li {% if page.nav == "home" %} class="active" {% endif %}><a href="{{ site.url }}/">Home</a></li>
                <li {% if page.nav == "about" %} class="active" {% endif %}><a href="{{ site.url }}/about">About</a></li>
                <li {% if page.nav == "authors" %} class="active" {% endif %}><a href="{{ site.url }}/authors">Authors</a></li>
                <li class="dropdown">
                    <a href="{{ site.url }}/blog/categories" class="dropdown-toggle" data-toggle="dropdown">Categories <i class="icon-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        {% for category,posts in data.posts_categories %}
                        <li><a href="{{ site.url }}/entries/categories/{{ category|url_encode(true) }}">{{ category }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                <li {% if page.nav == "contribute" %} class="active" {% endif %}>
                    <a href="{{ site.url }}/docs/contribute" class="dropdown-toggle" data-toggle="dropdown">Contribute <i class="icon-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ site.url }}/docs/contribute">Overview and Guidelines</a></li>
                        <li><a href="{{ site.url }}/docs/how-to-submit">How to Submit your Article</a></li>
                        <li><a href="{{ site.url }}/docs/running-locally">Running dev-human locally</a></li>
                    </ul>
                </li>
                <li {% if page.nav == "archive" %} class="active" {% endif %}><a href="{{ site.url }}/entries">Posts Archive</a></li>
                <li><a href="{{ site.url }}/atom.xml"><i class="icon-rss icon-large"></i></a></li>
            </ul>
        </div>
    </div>
</header><!--/header-->